/* pages/show_records.wxss */
/*表格  */
page{
    width: 100%;
    height: 100%;
}

.box{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.param-text{
    text-align: center;
    line-height: 75rpx;
}

.main{
    flex:1;
    position: relative;
}

.main-scroll{
    height: 100%;
    position:absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}



.param{
    position: relative;
}

.tb-box {
    border-bottom: 2rpx solid #f0f0f0;
    border-left: 2rpx solid #f0f0f0;
    border-right: 2rpx solid #f0f0f0;
}

/* 伪元素 */
.tb-box::after {
    content: '';
    width: 2rpx;
    height: 100%;
    background: #f0f0f0;
    position: absolute;
    left: 30%;
    top: 0;
}

.tb {
    border-left: 1px solid;
    border-right: 1px solid;
    position: relative;
}

.tL,
.tR {
    font-size: 25rpx;
    display: inline-block;
    box-sizing: border-box;
    padding: 17rpx 30rpx;
    vertical-align: top;
}

.tL {
    width: 38%;
    color: #262626;
    text-align: center;
}

.tR {
    width: 55%;
    color: #262626;
}
