<!--pages/register/register.wxml-->
<view class="container" style="width: 100%; height: 100%; box-sizing: border-box; ">
    <image src="../image/background.jpg" style="position:absolute;top:0;bottom:0;background-size:100% 100%;width:100%;height:100%;"></image>
    <view class="page-body" style="z-index:1;margin-top:20%;">
        <form catchsubmit="formSubmit" catchreset="formReset">
            
            <view class="page-section" style="margin-bottom:35rpx">
                <view class="page-section-title" style="font-size:20px;">真实姓名</view>
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__bd" style="">
                            <input class="weui-input" name="real_name" placeholder="请输入真实姓名" 
                            style="border-bottom:1px solid;border-color:#B2B2B2;height:35px;font-size:20px"/>
                        </view>
                    </view>
                </view>
            </view>
            <view class="page-section" style="margin-bottom:35rpx;">
                <view class="page-section-title" style="font-size:20px"> 手机号</view>
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__bd" style="">
                            <input class="weui-input" name="phone_number" placeholder="请输入11位电话号码"
                            style="border-bottom:1px solid;border-color:#B2B2B2;height:35px;cursor:2;font-size:20px" />
                        </view>
                    </view>
                </view>
            </view>

            <view class="btn-area" >
                <button style="margin: 30rpx 0" type="primary" formType="submit" style="width:100%;margin-bottom:30rpx">Submit</button>
                <button style="margin: 30rpx 0" formType="reset" style="width:100%">Reset</button>
            </view>
        
        </form>
    </view>

</view>